<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottomSheetLayout"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    app:behavior_hideable="true"
    app:behavior_peekHeight="60dp"
    app:layout_behavior="@string/bottom_sheet_behavior">

    <TextView
        android:layout_margin="16dp"
        android:id="@+id/bottomSheetHeading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textAppearance="@android:style/TextAppearance.Large"
        />

    <android.support.v7.widget.AppCompatButton
        android:padding="16dp"
        android:background="?android:selectableItemBackground"
        android:id="@+id/readButton"
        android:textColor="@color/colorPrimary"
        android:textAlignment="viewStart"
        android:text="@string/baca"
        android:layout_below="@id/bottomSheetHeading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <android.support.v7.widget.AppCompatButton
        android:padding="16dp"
        android:id="@+id/testButton"
        android:textColor="@color/colorPrimary"
        android:background="?android:selectableItemBackground"
        android:textAlignment="viewStart"
        android:text="@string/uji_hafalan"
        android:layout_below="@id/readButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <LinearLayout
        android:layout_below="@id/testButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="8dp"
        android:gravity="end"
        >

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/closeBottomSheetButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:text="@string/batal"
            style="@style/Widget.AppCompat.Button.Borderless"
            />

    </LinearLayout>

</RelativeLayout>